{
	"compilerOptions": {
		"target": "ES2020",
		"module": "CommonJS",
		"removeComments": true,
		"esModuleInterop": true,
		"noImplicitAny": true,
		"strict": true,
		"allowJs": false,
		"skipLibCheck": true,
		"rootDir": "src",
		"outDir": "dist",
		"strictPropertyInitialization": false,
		"experimentalDecorators": true
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules"]
}

